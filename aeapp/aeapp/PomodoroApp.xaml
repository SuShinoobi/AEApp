<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aeapp.PomodoroApp"
             Title="timer">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="20m 0s"
                   x:Name="ValueText"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" Font="60" Margin="0, 100, 0, 0" />

            <Button Text="Turn On"
                    x:Name="Button"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnButtonClickedFlip"
                    Font="Large"
                    Margin="0, 30, 0, 0"/>

            <Button Text="Reset"
                    x:Name="ResetButton"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnButtonClickedReset"
                    Font="Large"
                    Margin="0, 0, 0, 0"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>